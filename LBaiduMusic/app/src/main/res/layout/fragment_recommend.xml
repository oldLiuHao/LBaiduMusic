<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.youth.banner.Banner
            android:id="@+id/banner_recommend"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DP_130"
            app:indicator_width="@dimen/DP_2"
            />

        <GridView
            android:id="@+id/gird_singer_recommend"
            android:numColumns="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/lila_adv_recommend"
            android:paddingRight="@dimen/DP_20"
            android:paddingLeft="@dimen/DP_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DP_140"
            android:orientation="horizontal"
            android:gravity="center_vertical"

            >
            <ImageView
                android:id="@+id/iv_adv_recommend"
                android:layout_gravity="center"
                android:layout_width="@dimen/DP_120"
                android:layout_height="@dimen/DP_100" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_14"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/tv_name_adv_recommend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    />
                <TextView
                    android:layout_marginTop="@dimen/dp_10"
                    android:id="@+id/tv_author_adv_recommend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="@color/colorFragmentMymyText"
                    android:textSize="@dimen/sp_12"
                    />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DP_50"
            android:paddingLeft="@dimen/DP_16"
            android:paddingRight="@dimen/DP_16">

            <ImageView
                android:id="@+id/iv_recommend_recommend"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_recommend_recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@id/iv_recommend_recommend" />

            <TextView
                android:id="@+id/tv_more_recommend_recommend"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:drawableRight="@mipmap/btn_more_left_arrow_nor"
                android:gravity="center_vertical"
                android:text="@string/more"
                android:textColor="@color/colorFragmentMymyText"
                android:textSize="@dimen/fragment_my_login_LinerLayout_textSize" />

        </RelativeLayout>

        <GridView
            android:id="@+id/gird_recommend_recommend"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DP_180"
            android:numColumns="3"
            android:horizontalSpacing="@dimen/dp_10"
            android:paddingLeft="@dimen/DP_20"
            android:paddingRight="@dimen/DP_20"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DP_50"
            android:paddingLeft="@dimen/DP_16"
            android:paddingRight="@dimen/DP_16">

            <ImageView
                android:id="@+id/iv_new_recommend"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_new_recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@id/iv_new_recommend" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:drawableRight="@mipmap/btn_more_left_arrow_nor"
                android:gravity="center_vertical"
                android:text="@string/more"
                android:textColor="@color/colorFragmentMymyText"
                android:textSize="@dimen/fragment_my_login_LinerLayout_textSize" />

        </RelativeLayout>

        <GridView
            android:id="@+id/gird_new_recommend"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DP_300"
            android:numColumns="3"
            android:horizontalSpacing="@dimen/dp_10"
            android:paddingLeft="@dimen/DP_20"
            android:paddingRight="@dimen/DP_20"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DP_50"
            android:paddingLeft="@dimen/DP_16"
            android:paddingRight="@dimen/DP_16">

            <ImageView
                android:id="@+id/iv_hot_recommend"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_hot_recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@id/iv_hot_recommend" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:drawableRight="@mipmap/btn_more_left_arrow_nor"
                android:gravity="center_vertical"
                android:text="@string/more"
                android:textColor="@color/colorFragmentMymyText"
                android:textSize="@dimen/fragment_my_login_LinerLayout_textSize" />

        </RelativeLayout>

        <GridView
            android:id="@+id/gird_hot_recommend"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DP_200"
            android:numColumns="3"
            android:horizontalSpacing="@dimen/dp_10"
            android:paddingLeft="@dimen/DP_20"
            android:paddingRight="@dimen/DP_20"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DP_50"
            android:paddingLeft="@dimen/DP_16"
            android:paddingRight="@dimen/DP_16">

            <ImageView
                android:id="@+id/iv_radio_recommend"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_radio_recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@id/iv_radio_recommend" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:drawableRight="@mipmap/btn_more_left_arrow_nor"
                android:gravity="center_vertical"
                android:text="@string/more"
                android:textColor="@color/colorFragmentMymyText"
                android:textSize="@dimen/fragment_my_login_LinerLayout_textSize" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DP_100"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            >
            <ImageView
                android:src="@mipmap/radio_one"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageView
                android:src="@mipmap/redio_two"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageView
                android:src="@mipmap/redio_three"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageView
                android:src="@mipmap/redio_four"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DP_50"
            android:paddingLeft="@dimen/DP_16"
            android:paddingRight="@dimen/DP_16">

            <ImageView
                android:id="@+id/iv_today_recommend"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_today_recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@id/iv_today_recommend" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:drawableRight="@mipmap/btn_more_left_arrow_nor"
                android:gravity="center_vertical"
                android:text="@string/more"
                android:textColor="@color/colorFragmentMymyText"
                android:textSize="@dimen/fragment_my_login_LinerLayout_textSize" />

        </RelativeLayout>
        <ListView
            android:id="@+id/list_today_recommend"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DP_200"
            android:paddingLeft="@dimen/DP_20"
            android:paddingRight="@dimen/DP_20"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DP_50"
            android:paddingLeft="@dimen/DP_16"
            android:paddingRight="@dimen/DP_16">

            <ImageView
                android:id="@+id/iv_original_recommend"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_original_recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@id/iv_original_recommend" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:drawableRight="@mipmap/btn_more_left_arrow_nor"
                android:gravity="center_vertical"
                android:text="@string/more"
                android:textColor="@color/colorFragmentMymyText"
                android:textSize="@dimen/fragment_my_login_LinerLayout_textSize" />

        </RelativeLayout>
        <GridView
            android:id="@+id/gird_original_recommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/DP_20"
            android:paddingRight="@dimen/DP_20"
            android:numColumns="3"
            android:horizontalSpacing="@dimen/dp_10"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DP_50"
            android:paddingLeft="@dimen/DP_16"
            android:paddingRight="@dimen/DP_16">

            <ImageView
                android:id="@+id/iv_mv_recommend"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_mv_recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@id/iv_mv_recommend" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:drawableRight="@mipmap/btn_more_left_arrow_nor"
                android:gravity="center_vertical"
                android:text="@string/more"
                android:textColor="@color/colorFragmentMymyText"
                android:textSize="@dimen/fragment_my_login_LinerLayout_textSize" />

        </RelativeLayout>
        <GridView
            android:id="@+id/gird_mv_recommend"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DP_300"
            android:numColumns="3"
            android:paddingLeft="@dimen/DP_20"
            android:paddingRight="@dimen/DP_20"
            android:horizontalSpacing="@dimen/dp_10"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DP_50"
            android:paddingLeft="@dimen/DP_16"
            android:paddingRight="@dimen/DP_16">

            <ImageView
                android:id="@+id/iv_happy_recommend"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_happy_recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@id/iv_happy_recommend" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:drawableRight="@mipmap/btn_more_left_arrow_nor"
                android:gravity="center_vertical"
                android:text="@string/more"
                android:textColor="@color/colorFragmentMymyText"
                android:textSize="@dimen/fragment_my_login_LinerLayout_textSize" />

        </RelativeLayout>
        <GridView
            android:id="@+id/gird_happy_recommend"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DP_300"
            android:paddingLeft="@dimen/DP_20"
            android:paddingRight="@dimen/DP_20"
            android:numColumns="3"
            android:horizontalSpacing="@dimen/dp_10"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DP_50"
            android:paddingLeft="@dimen/DP_16"
            android:paddingRight="@dimen/DP_16">

            <ImageView
                android:id="@+id/iv_special_recommend"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_special_recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@id/iv_special_recommend" />

        </RelativeLayout>
        <ListView
            android:id="@+id/list_special_recommend"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DP_400"
            android:paddingLeft="@dimen/DP_20"
            android:paddingRight="@dimen/DP_20"
            />
    </LinearLayout>
</ScrollView>