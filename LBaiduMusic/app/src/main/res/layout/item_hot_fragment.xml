<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/DP_120"
    >
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/fragment_hot_item_relative_margin"
        android:layout_marginBottom="@dimen/fragment_hot_item_relative_margin"
        >
        <ImageView
            android:layout_marginLeft="@dimen/fragment_hot_item_relative_image_margin_left"
            android:id="@+id/iv_item_hot_fragment"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            />
        <ImageView
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:src="@mipmap/bt_playall_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/fragment_hot_item_relative_image_margin_left"
        android:layout_marginBottom="@dimen/fragment_hot_item_relative_image_margin_left"
        android:layout_weight="6"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/fragment_hot_item_relative_image_margin_left"
        >
        <TextView
            android:id="@+id/tv_name_hot_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/tv_first_content_hot_list"
            android:layout_marginTop="@dimen/fragment_hot_item_second_text_maigin_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="@dimen/fragment_song_list_name_text_textsize"
            android:textColor="@color/colorFragmentMymyText"
            />
        <TextView
            android:id="@+id/tv_second_content_hot_list"
            android:layout_marginTop="@dimen/fragment_hot_item_third_text_maigin_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="@dimen/fragment_song_list_name_text_textsize"
            android:textColor="@color/colorFragmentMymyText"
            />
        <TextView
            android:id="@+id/tv_third_content_hot_list"
            android:layout_marginTop="@dimen/fragment_hot_item_third_text_maigin_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="@dimen/fragment_song_list_name_text_textsize"
            android:textColor="@color/colorFragmentMymyText"/>


    </LinearLayout>

    <ImageView
        android:layout_marginRight="@dimen/fragment_song_list_pop_item_margin"
        android:src="@mipmap/bt_recsong_module_more"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView" />

</LinearLayout>