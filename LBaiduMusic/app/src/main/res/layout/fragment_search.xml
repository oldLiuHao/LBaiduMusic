<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFragmentMyLoginText"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_main_tab_height"
        android:orientation="horizontal"
        android:background="@color/colorIncludeBackground"
        >
        <ImageView
            android:id="@+id/iv_back_search"
            android:src="@mipmap/ic_back_normal"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_search"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@color/colorFragmentMyLoginText"
            android:hint="   歌曲，歌手，歌词，朋友，话题"
            android:textSize="15sp"
            />
        <ImageView
            android:id="@+id/iv_search_search"
            android:src="@mipmap/bt_titlebar_search_normal"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <ListView
        android:id="@+id/list_conent_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />
    <LinearLayout
        android:id="@+id/lila_content_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <TextView
        android:paddingLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_main_tab_height"
        android:text="热门搜索"
        android:gravity="center_vertical"
        android:textSize="16sp"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingLeft="5dp"
        >
        <TextView
            android:background="@drawable/hot_search_select"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/colorIncludeBackground"
            android:text="儿歌"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:layout_marginLeft="10dp"
            android:background="@drawable/hot_search"
            android:textSize="16sp"
            android:gravity="center"
            android:text="薛之谦"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:layout_marginLeft="10dp"
            android:background="@drawable/hot_search"
            android:textSize="16sp"
            android:gravity="center"
            android:text="张杰"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:layout_marginLeft="10dp"
            android:background="@drawable/hot_search"
            android:textSize="16sp"
            android:gravity="center"
            android:text="刚好遇见你"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingLeft="5dp"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:background="@drawable/hot_search"
            android:textSize="16sp"
            android:gravity="center"
            android:text="孤芳不自赏"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:layout_marginLeft="10dp"
            android:background="@drawable/hot_search"
            android:textSize="16sp"
            android:gravity="center"
            android:text="周杰伦"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:layout_marginLeft="10dp"
            android:background="@drawable/hot_search"
            android:textSize="16sp"
            android:gravity="center"
            android:text="成都"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingLeft="5dp"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:background="@drawable/hot_search"
            android:textSize="16sp"
            android:gravity="center"
            android:text="三生三世十里桃花"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:layout_marginLeft="10dp"
            android:background="@drawable/hot_search"
            android:textSize="16sp"
            android:gravity="center"
            android:text="鹿晗"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <ListView
        android:id="@+id/search_list_search"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text="无搜索历史记录"
        android:id="@+id/tv_not_have_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>