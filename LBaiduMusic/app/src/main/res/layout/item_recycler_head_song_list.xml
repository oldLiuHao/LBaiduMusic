<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fragment_song_list_grid_height"
    android:orientation="vertical"
    android:paddingLeft="@dimen/fragment_song_recycler_head_song_list_padding"
    android:paddingRight="@dimen/fragment_song_recycler_head_song_list_padding"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_song_list_grid_image_height">

        <ImageView
            android:id="@+id/iv_gird_song_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/jt1"
            android:scaleType="fitXY"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/fragment_song_list_grid_text_height"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/fragment_song_list_grid_text_margin">

            <TextView
                android:drawableLeft="@mipmap/ic_listen_count"
                android:id="@+id/tv_num_my"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textColor="@color/colorFragmentMyLoginText"
               android:textSize="12sp"
                />

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="@mipmap/bt_playall_normal" />

        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_name_gird_song_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textSize="@dimen/fragment_song_list_name_text_textsize"
        />

    <TextView
        android:id="@+id/tv_author_gird_song_list"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:maxLines="1"
        android:textSize="@dimen/fragment_song_list_name_text_textsize"
        android:textColor="@color/colorFragmentMymyText"

       />

</LinearLayout>