<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/DP_100"
        >
        <ImageView
            android:id="@+id/iv_information_play"
            android:layout_marginLeft="@dimen/DP_20"
            android:layout_width="@dimen/DP_80"
            android:layout_height="@dimen/DP_100"
            android:scaleType="fitXY"
            />
        <TextView
            android:id="@+id/tv_author_information"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toRightOf="@id/iv_information_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            />
        <TextView
            android:id="@+id/tv_name_information"
            android:layout_alignBottom="@id/iv_information_play"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toRightOf="@id/iv_information_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            />

    </RelativeLayout>
    <TextView
        android:gravity="center"
        android:textSize="@dimen/SP_20"
        android:text="@string/noRecommend"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        />



</LinearLayout>