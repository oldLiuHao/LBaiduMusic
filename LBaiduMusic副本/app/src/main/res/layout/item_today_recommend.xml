<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/iv_play_item_today"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/iv_item_today"
        android:src="@mipmap/bt_recsong_play"
        android:layout_width="30dp"
        android:layout_height="30dp" />
    <ImageView
        android:layout_alignParentRight="true"
        android:src="@mipmap/bt_recsong_more_invalid"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_item_today"
        >
        <TextView
            android:id="@+id/tv_name_item_today"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            />
        <TextView
            android:id="@+id/tv_author_item_today"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/colorFragmentMymyText"
            />
    </LinearLayout>



</RelativeLayout>