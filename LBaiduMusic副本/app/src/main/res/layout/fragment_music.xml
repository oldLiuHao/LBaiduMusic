<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/include_title"/>
   <android.support.design.widget.TabLayout
       android:id="@+id/tab_music_fragment"
       android:layout_width="match_parent"
       android:layout_height="@dimen/fragment_music_tab_height"
        app:tabGravity="fill"
       app:tabSelectedTextColor="@color/colorIncludeBackground"
       app:tabIndicatorColor="@color/colorIncludeBackground"
       />
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_music_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>