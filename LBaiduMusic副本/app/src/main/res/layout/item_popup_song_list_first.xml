<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_song_list_pop_item_height"
        android:orientation="horizontal"
        >


    <ImageView
        android:src="@mipmap/bt_startpage_bg_press"
        android:layout_width="@dimen/fragment_song_list_left_image_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fragment_song_list_pop_item_margin"
        />
    <TextView
        android:id="@+id/tv_titile_popup_all"
        android:layout_marginLeft="@dimen/fragment_song_list_pop_item_margin"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textColor="@color/colorFragmentMymyText"
        android:textSize="@dimen/fragment_my_login_LinerLayout_textSize"
        />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_item_popup_song_list_second"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>