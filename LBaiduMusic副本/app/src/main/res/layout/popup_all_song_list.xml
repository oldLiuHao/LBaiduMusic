<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <LinearLayout
        android:id="@+id/lila_transparent_song_list_all"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#b0000000"
        >

    </LinearLayout>
    <LinearLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@color/colorFragmentMyLoginText">
    <TextView
        android:gravity="center"
        android:text="@string/fragment_song_list_all_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_song_list_pop_item_height"
         />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_pup_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>