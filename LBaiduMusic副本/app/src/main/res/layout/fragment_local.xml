<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFragmentMyLoginText"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:orientation="horizontal"
        android:background="@color/colorIncludeBackground"
        >
        <ImageView
            android:id="@+id/iv_back_local"
            android:src="@mipmap/ic_back_normal"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toRightOf="@id/iv_back_local"
            android:gravity="center_vertical"
            android:id="@+id/tv_back_local"
            android:text="本地音乐"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorFragmentMyLoginText"
            />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/iv_sort_local"
            android:src="@mipmap/ic_localmusic_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_toLeftOf="@id/iv_sort_local"
            android:id="@+id/iv_scan_local"
            android:src="@mipmap/ic_localmusic_scan"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_toLeftOf="@id/iv_scan_local"
            android:id="@+id/iv_search_local"
            android:src="@mipmap/ic_localmusic_search"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <android.support.design.widget.TabLayout
            app:tabIndicatorColor="@color/colorIncludeBackground"
            app:tabSelectedTextColor="@color/colorIncludeBackground"
            android:id="@+id/tab_local_fragment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"/>
        <android.support.v4.view.ViewPager
            android:id="@+id/vp_local_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


</LinearLayout>